@sql.data.question.view
SELECT  Q.SEQ,             
		Q.BOARD_TYPE,       
		Q.TITLE,            
		CLOB_TO_CHAR(Q.CONTENTS) AS CONTENTS,
	    Q.FILE_ID AS FILE_ID,          
		Q.DEL_YN,           
		Q.READ_COUNT,
	    Q.REG_ID,          
		to_char(Q.REG_DT, 'YYYY.MM.DD') AS REG_DT,           
		Q.REG_NM
FROM RNDCALL_BOARD_QUESTION Q LEFT OUTER JOIN RNDCALL_FILE F ON Q.SEQ = F.FILE_ID
WHERE Q.DEL_YN='N'
